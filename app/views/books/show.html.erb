<div class="container book-show">
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile',user: @user %>

		<h2>New book</h2>
		<%= render 'books/newform',book: @book_new %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr class="book_<%= @book.id %>">
					<%= render 'detail',book: @book %>
				</tr>
			</table>

			<!-- コメント本文表示 -->
			<table class="show-tb comment_<%= @book.id %>">
				<%= render 'post_comments/post_comment',book: @book %>
			</table>
			<!-- コメント本文表示 -->
			        <% if @post_comment.errors.any? %>
			            <h2><%= @post_comment.errors.count %> errors prohibited this obj from being saved:</h2>
			                <ul>
			                    <% @post_comment.errors.full_messages.each do |message| %>
			                        <li><%= message %></li>
			                    <% end %>
			                </ul>
			        <% end %>
        	<!-- コメント入力フォーム -->
        	<div id ="comment_form">
        		<%= render 'post_comments/post_comment_form',book: @book ,post_comment: @post_comment %>
			</div>
			<!-- コメント入力フォーム -->

	</div>
</div>
</div>
